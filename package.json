{
  "name": "resadresaka",
  "version": "1.0.0",
  "description": "A project that I've supposed to finish when I started to learn how websocket works",
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "npm run dev --workspace=@resadresaka/client",
    "dev:server": "npm run dev --workspace=@resadresaka/server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*"
  ],
  "keywords": [
    "messaging",
    "video call"
  ],
  "author": "Fiantso Harena",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  }
}
